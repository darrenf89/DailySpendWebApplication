@model DailySpendBudgetWebApp.Models.CreateABudgetPageModel

@{
    ViewData["Title"] = "Enter Budget Details";
    Layout = "~/Views/Shared/_LayoutNoFotter.cshtml";
}

<form method="Post">
    <div style="bg-transparent">
        <div class="container mt-2">
            @if (ViewBag.hasBudgetName)
            {
            <div class="d-flex justify-content-center w-100 mt-auto mb-auto">
                <div class="input-container col-9">
                        <input class="text-secondary border-bottom border-1 border-secondary" style="font-size:20px;" value="@ViewBag.BudgetName" asp-for="BudgetName" type="text" disabled />
                    <span class="text-danger" asp-validation-for="BudgetName"></span>
                </div>
            </div>
            }
            else
            {
            <div class="d-flex justify-content-center mt-auto mb-auto">
                <div class="input-container col-9" >
                    <input style="font-size:20px;" placeholder="Budget Name" asp-for="BudgetName" type="text" required />
                    <span class="text-danger" asp-validation-for="BudgetName"></span>
                </div>
            </div>
            }
        </div>
        <div>
            <h5 class="text-primary">Budget Settings!</h5>
            <div>
                <label asp-for="CurrencyDDL" class="d-flex form-label"></label>
                <select asp-for="CurrencyDDL" asp-items=ViewBag.CurrencyDDL class="form-control w-75 ms-4"></select>
            </div>
            <div>
                <label asp-for="NumberFormatDDL" class="d-flex form-label"></label>
                <select asp-for="NumberFormatDDL" asp-items=ViewBag.NumberFormatDDL class="form-control w-75 ms-4"></select>
            </div>
            <div>
                <label asp-for="CurrencyPlacementDDL" class="d-flex form-label"></label>
                <select asp-for="CurrencyPlacementDDL" asp-items=ViewBag.CurrencyPlacementDDL class="form-control w-75 ms-4"></select>
            </div>
            <div>
                <label asp-for="DateFormatDDL" class="d-flex form-label"></label>
                <select asp-for="DateFormatDDL" asp-items=ViewBag.DateFormatDDL class="form-control w-75 ms-4"></select>
            </div>
        </div>
        <div id="BudgetInfo" class="w-100">
            <div class="card text-white bg-white mb-3 shadow">
                <div class="card-header p-2 d-flex justify-content-between border-bottom border-primary" style="background-color: #FFCC98;">
                    <h8 class="col-6 text-primary">Finance Information</h8>
                </div>
                <div class="card-body">
                    <div id="MoneyInfo"></div>
                    <div id="nextIncomeEventInfo"></div>
                </div>
            </div>
        </div>
    </div>
    <footer class="m-0 p-0 mb-5"style="position: absolute; bottom: 0; left: 0; width: 100%">
        <div class="d-flex flex-column align-items-center justify-content-center">
            <button type="submit" class="btn btn-lg btn-success rounded-1 col-10 mb-1"><i class="bi bi-file-earmark-plus"></i> &nbsp Create Budget</button>
        </div>
    </footer>
</form>

