@model DailySpendBudgetWebApp.Models.CreateABudgetPageModel

@{
    ViewData["Title"] = "Enter Budget Details";
    Layout = "~/Views/Shared/_LayoutNoFotter.cshtml";
}

<form method="Post">
    <div class="bg-transparent" style="min-height: 82vh;">
        <div class="container mt-2">
            @if (ViewBag.hasBudgetName)
            {
            <div class="d-flex justify-content-center w-100 mt-auto mb-auto">
                <div class="input-container col-9 mb-3">
                        <input class="text-secondary border-bottom border-1 border-secondary" style="font-size:20px;" value="@ViewBag.BudgetName" asp-for="BudgetName" type="text" disabled />
                    <span class="text-danger" asp-validation-for="BudgetName"></span>
                </div>
            </div>
            }
            else
            {
            <div class="d-flex justify-content-center mt-auto mb-auto">
                <div class="input-container col-9 mb-3" >
                    <input style="font-size:20px;" placeholder="Budget Name" asp-for="BudgetName" type="text" required />
                    <span class="text-danger" asp-validation-for="BudgetName"></span>
                </div>
            </div>
            }
        </div>
        <div class="mb-4">
            <h5 class="text-dark p-2">Budget Settings!</h5>
            <div class="DropDown">
                <label asp-for="CurrencyDDL" class="d-flex form-label ms-4 mb-0 text-secondary"></label>
                <select asp-for="CurrencyDDL" asp-items=ViewBag.CurrencyDDL class="form-control w-75 ms-4 border-0 text-secondary p-0 ps-4"></select>
                <div class="border-bottom border-secondary m-2 ms-3 me-3"></div>
            </div>
            <div class="DropDown">
                <label asp-for="NumberFormatDDL" class="d-flex form-label ms-4 mb-0 text-secondary"></label>
                <select asp-for="NumberFormatDDL" asp-items=ViewBag.NumberFormatDDL class="form-control w-75 ms-4 border-0 text-secondary p-0 ps-4"></select>
                <div class="border-bottom border-secondary m-2 ms-3 me-3"></div>
            </div>
            <div class="DropDown">
                <label asp-for="CurrencyPlacementDDL" class="d-flex form-label ms-4 mb-0 text-secondary"></label>
                <select asp-for="CurrencyPlacementDDL" asp-items=ViewBag.CurrencyPlacementDDL class="form-control w-75 ms-4 border-0 text-secondary p-0 ps-4"></select>
                <div class="border-bottom border-secondary m-2 ms-3 me-3"></div>
            </div>
            <div class="DropDown">
                <label asp-for="DateFormatDDL" class="d-flex form-label ms-4 mb-0 text-secondary"></label>
                <select asp-for="DateFormatDDL" asp-items=ViewBag.DateFormatDDL class="form-control w-75 ms-4 border-0 text-secondary p-0 ps-4"></select>
                <div class="border-bottom border-secondary m-2 ms-3 me-3"></div>
            </div>
        </div>
        <div class="w-100">
            <div id="SummaryIncomeDetails" style="display: none;">
                
            </div>
            <div id="OpenIncomeDetails">
                <button onclick='enterDetails("IncomeDetails")' class="btn btn-sm btn-danger rounded-1 col-4 mb-1 ms-3">Add Income &nbsp;<i class="bi bi-cash-stack text-white"></i></button>
            </div>
            <div class="modal">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <div class="bg-dark">
                                <h5 class="modal-title">Enter the MONIES!</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true"></span>
                                </button>
                            </div>
                        </div>
                        <div class="modal-body">
                            <p>To start the grind you need to let us know how much money you have, and how often you get paid ... don't be embarrased I get paid less I promse!</p>
                            <div id="MoneyInfo" class="row mt-4 pe-3 ps-3">
                                <div class="col-6 ps-4 pe-4">
                                    <label class="d-flex form-label ms-2 mb-2 text-secondary" asp-for="StartingBalanceInt"></label>
                                    <div class="input-group">
                                        <span style="width: 5%" class="input-group-text">£</span>
                                        <input style="width: 30%" asp-for="StartingBalanceInt" type="number" class="form-control" placeholder="0,000" />
                                        <span style="width: 5%" class="input-group-text">.</span>
                                        <input style="width: 10%" asp-for="StartingBalanceDec" type="number" class="form-control" placeholder="00" />
                                    </div>
                                </div>
                                <div id="payinfo" class="col-6 ps-4 pe-4">
                                    <label asp-for="NextIncomeDate" class="d-flex form-label ms-2 mb-2 text-secondary"></label>
                                    <input class="form-control text-secondary" type="date" asp-for="NextIncomeDate" />
                                </div>
                            </div>
                            <div>
                                <fieldset class="form-group mt-5">
                                    <span class="ms-3 text-secondary">More Money, More Problems!</span>
                                    <div class="ms-3 mt-2 pe-3 ps-5">
                                        <div class="form-check col-4 p-0 mt-3 mb-3">
                                            <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked=""/>
                                            <label class="form-check-label align-self-center text-secondary" for="optionsRadios1">
                                                Every so many ...
                                            </label>
                                        </div>
                                        <div class="form-check col-4 p-0 mt-3 mb-3">
                                            <input class="form-check-input align-self-center" type="radio" name="optionsRadios" id="optionsRadios2" value="option2" />
                                            <label class="form-check-label align-self-center text-secondary" for="optionsRadios2">
                                                Last x ...
                                            </label>
                                        </div>
                                        <div class="form-check col-4 p-0 mt-3 mb-3">
                                            <input class="form-check-input align-self-center" type="radio" name="optionsRadios" id="optionsRadios3" value="option3"/>
                                            <label class="form-check-label align-self-center text-secondary" for="optionsRadios3">
                                                On the ...
                                            </label>
                                        </div>
                                    </div>
                                    <div id="PeriodicPay" style="display: none">
                                        <span>Every</span>
                                        <input class="form-control text-secondary" type="Number" asp-for="PeriodicPayPeriod" />
                                        <select></select>
                                    </div>
                                    <div id="LastDayOfMonthPay" style="display: none">
                                        <span>On the </span>
                                        <input class="form-control text-secondary" type="Number" asp-for="LastDayOfMonthPayPeriod" />
                                        <span id="OrdinalIndicatorLast"></span>
                                        <span> Last working day of every month</span>
                                    </div>
                                    <div id="GivenDayOfMonthPay" style="display: none">
                                        <span>On the </span>
                                        <input class="form-control text-secondary" type="Number" asp-for="GivenDayOfMonthPayPeriod" />
                                        <span id="OrdinalIndicatorGiven"></span>
                                        <span> of every month</span>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <div class="bg-dark">
                                <button type="button" class="btn btn-primary">Save changes</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="sticky-bottom m-0 p-0"style="width: 100%">
        <div class="d-flex flex-column align-items-center justify-content-center">
            <button type="submit" class="btn btn-lg btn-success rounded-1 mb-4 col-10"><i class="bi bi-file-earmark-plus"></i> &nbsp Create Budget</button>
        </div>
    </footer>
</form>

<script>

    function enterDetails(ID) {
        var Open = document.getElementById("Open" + ID);
        var Enter = document.getElementById("Enter" + ID);
        var Summary = document.getElementById("Summary" + ID);
        Open.style.display = "none";
        Enter.style.display = "block";
        Summary.style.display = "none";
    }

    function saveDetails(ID) {
        var Open = document.getElementById("Open" + ID);
        var Enter = document.getElementById("Enter" + ID);
        var Summary = document.getElementById("Summary" + ID);
        Open.style.display = "none";
        Enter.style.display = "none";
        Summary.style.display = "block";
    }
</script>
