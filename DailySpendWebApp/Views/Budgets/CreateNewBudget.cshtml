@model DailySpendBudgetWebApp.Models.CreateABudgetPageModel

@{
    Layout = "";
    ViewData["Title"] = "Creat your First Budget!";}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DailySpendBudgetWebApp</title>
    <link rel="stylesheet" href="~/css/BootswatchThemeUnited.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/textboxstyle.css" rel="stylesheet" />

</head>
<body class="p-0" >
    <form method="post">
    <div class="d-flex flex-column vh-100" style="background-color: transparent; background-image: url('../img/logonhomebackground2.jpg'); background-size: 100% 100%; background-repeat:no-repeat;">
        <div class="d-flex">
            <h1 class="container text-white text-center pt-4 pe-3 ps-3">Time to start the Daily Grind!</h1>
        </div>
        <div class="d-flex mt-4 p-4 align-self-center">
            <img src="~/img/logoFiles/ForWeb/png/JustlogoOrange.png" class="shadow rounded-circle" style="max-width: 150px; background-color: transparent;" />
        </div>
        <div class="d-flex">
            <h4 class="container text-primary text-center mb-3">First you need to create a budget!</h4>           
        </div>
        <div style ="font-size: 40px"class="d-flex text-primary align-self-center mb-1">
            <i class="bi bi-calculator"></i>
        </div>
        <p class="col-8 text-center align-self-center mb-3 mt-3 text-primary">Enter a <strong class="text-dark">Name</strong> for your budget and click <strong class="text-dark">Continue</strong></p>
        <div class="d-flex justify-content-center mt-auto mb-auto">
            <div class="input-container col-8">
                <input asp-for="BudgetName" type="text" required />
		        <label asp-for="BudgetName" class="">Budget Name</label>
                <span class="text-danger" asp-validation-for="BudgetName"></span>
	        </div>
        </div>
        <div class="container row justify-content-center">
            @Html.ActionLink("Home", "Index", "Home",new {@returnUrl = Url.Action(ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["controller"].ToString())},new {@class = "col-4 rounded-pill shadow btn btn-secondary text-dark"})
            <div class="col-1"></div>
            <button type="submit" class="col-4 rounded-pill shadow btn btn-dark text-white">Continue &nbsp;<i class="text-white bi bi-caret-right-fill"></i></button>
        </div>
        <div class="d-flex flex-column mt-auto ps-4 pe-4 align-items-center">
            <div class="d-flex mb-4 mt-auto justify-content-center">
                <p class="col-10 text-center mt-4 text-primary">Or click <strong class="text-dark">Home</strong>, but remember you'll need to come back. So just do it now!</p> 
            </div>
            <div class="mb-2">
                <img src="~/img/LogoFiles/ForWeb/png/Whitelogonobackground.png" style="max-height: 50px"/>
            </div>
        </div>


        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </div>
    </form>
</body>

</html>
