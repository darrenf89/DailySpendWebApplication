@model LogonPageModel

@{
    ViewData["Title"] = "Logon";
    Layout = "~/Views/Shared/_LayoutForLogon.cshtml";
}

<form method="post" class="fill align-items-baseline">
    <div class="d-flex flex-column h-100 justify-content-end p-3 align-items-center" style="background-color: transparent;">
        <div class="align-items-center mb-5">
            <img src="~/img/logoFiles/ForWeb/png/ColorlogobackgroundExtended.png" class="shadow bg-body rounded-pill" style="max-width: 200px" />
        </div>
        <div class="shadow p-3 mb-5 bg-body rounded border p-3 mt-4 mb-4" style="width:100%; background-color: white;">
            <div class="row pb-2 text-center mb-4 justify-content-center">
                <h2 class="text-primary">Hello Again!</h2>
                <h6 class="w-75 border-dark pb-3 border-bottom text-primary">Sign into your Account</h6>
            </div>
            <div class="row align-items-center mb-4">
                <input asp-for="Email" class="form-control w-75 ms-4"  type="email" placeholder="Enter your Email" />
                <label asp-for="Email" class="d-flex form-label col-2 m-0 justify-content-center align-items-center"><i class="bi bi-envelope-fill text-primary"></i></label>
                <span asp-validation-for="Email" style="font-size:10px" class="text-danger ms-4"></span>
            </div>
            <div class="row align-items-center mb-1">
                <input asp-for="Password" type="password" name="Password" class="form-control w-75 ms-4" placeholder="Enter your Password!" />
                <label asp-for="Password" class="d-flex form-label col-2 m-0 justify-content-center align-items-center"><i class="bi bi-eye-slash-fill text-primary"></i></label>
                <span asp-validation-for="Password" style="font-size:10px" class="text-danger ms-4"></span>
                <div class="mt-1">
                    <a asp-action="ForgotPassword" style="font-size:12px" class="d-flex text-muted justify-content-end me-4">Forgot your Password?</a>
                </div>
            </div>
            
            <div class="d-flex mb-4">
                <input asp-for="isRememberMe" class="align-self-center ms-4" />
                <label asp-for="isRememberMe" Style="font-size: 12px;" class="text-muted ms-3">Remember Me!</label>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary rounded-pill col-6 mb-4"><i class="bi bi-lock"></i> &nbsp Logon</button>
            </div>
            <div asp-validation-summary="All" style="font-size:14px;" class="text-center text-danger"></div>
            <div class="text-center">
                <p class="text-primary mb-4">Or Logon using Social Media</p>
                <div class="d-flex justify-content-between">
                    <div class=col-3></div>
                    <a href="#"><img src="~/img/fb_icon_325x325.png" style="max-width:30px" /></a>
                    <a href="#"><img src="~/img/twitter.png" style="max-width:30px" /></a>
                    <a href="#"><img src="~/img/google.png" style="max-width:30px" /></a>
                    <div class=col-3></div>
                </div>
            </div>
        </div>

        <div class="m-2 text-center">
            <p><strong>Already have an Account? @Html.ActionLink("Register", "Register", "Accounts",new {@returnUrl = Url.Action(ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["controller"].ToString())},new {@class = "text-primary"})</strong></p>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
    }