@model RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutForLogon.cshtml";
}

<form method="post" class="fill align-items-baseline">
    <div class="d-flex flex-column h-100 justify-content-end p-3 align-items-center"style="background-color: transparent;">
        <div class="align-items-center mb-5">
            <img src="~/img/logoFiles/ForWeb/png/ColorlogobackgroundExtended.png" class="shadow bg-body rounded-pill"  style="max-width: 200px"/>
        </div>
        <div class="shadow p-3 mb-5 bg-body rounded border p-3 mt-4 mb-4" style="width: 100%; background-color: white;">
            <div class="row pb-2 text-center mb-4 justify-content-center">
                <h2 class="text-primary">Welcome!</h2>
                <h6 class="w-75 border-dark pb-3 border-bottom text-primary">Start Your Journey Today</h6>
            </div>
            <div class="row align-items-center mb-4">
                <input asp-for="NickName" class="form-control w-75 ms-4" type="text" placeholder="Tell us how you'd like to be known!" />
                <label asp-for="NickName" class="d-flex form-label col-2 m-0 justify-content-center align-items-center"><i class="bi bi-person-hearts text-primary"></i></label>
                <span asp-validation-for="NickName" style="font-size:10px" class="text-danger ms-4"></span>
            </div>
            <div class="row align-items-center mb-4">
                <input asp-for="Email" class="form-control w-75 ms-4" type="email" placeholder="Enter an Email address!" />
                <label asp-for="Email" class="d-flex form-label col-2 m-0 justify-content-center align-items-center"><i class="bi bi-envelope-fill text-primary"></i></label>
                <span asp-validation-for="Email" style="font-size:10px" class="text-danger ms-4"></span>
            </div>
            <div class="row align-items-center mb-4">
                <input asp-for="Password" type="password" name="Password" class="form-control w-75 ms-4" placeholder="Please Enter a Password!" />
                <label asp-for="Password" class="d-flex form-label col-2 m-0 justify-content-center align-items-center"><i class="bi bi-eye-slash-fill text-primary"></i></label>
                <span asp-validation-for="Password" style="font-size:10px" class="text-danger ms-4"></span>
            </div>
            <div class="row align-items-center mb-4">
                <input asp-for="ConfirmPassword" type="password" name="ConfirmPassword" class="form-control w-75 ms-4" placeholder="Please confirm the Password!" />
                <label asp-for="ConfirmPassword" class="d-flex form-label col-2 m-0 justify-content-center align-items-center"><i class="bi bi-eye-slash-fill text-primary"></i></label>
                <span asp-validation-for="ConfirmPassword" style="font-size:10px" class="text-danger ms-4"></span>
            </div>
            <div class="d-flex">
                <input asp-for="isAgreedToTerms" class="align-self-center ms-4" />
                <label asp-for="isAgreedToTerms" Style="font-size: 12px;" class="text-muted ms-3"> I have read and agree to the Terms of Service</label>    
            </div>
            <span asp-validation-for="isAgreedToTerms" style="font-size:10px" class="text-danger ms-4"></span>
            <div class="d-flex mb-4">
                <input asp-for="isDPAPermissions" class="align-self-center ms-4" />
                <label asp-for="isDPAPermissions" Style="font-size: 12px;" class="text-muted ms-3"> I agree to be contacted by dBuget</label>
            </div>
            <div class="d-flex flex-column align-items-center justify-content-center mb-4">
                <button type="submit" class="btn btn-primary rounded-pill col-6 mb-1"><i class="bi bi-lock"></i>  Register Now</button>
                <span asp-validation-for="isEmailUnique" style="font-size:12px" class="text-danger text-center ms-4"></span>
            </div>
            @*<div asp-validation-summary="All" style="font-size: 8px" class="text-danger text-center"></div>*@

            <div class="text-center">
                <p class="text-primary mb-4">Or Register using Social Media</p>
                <div class="d-flex justify-content-between">
                    <div class=col-3></div>
                    <a href="#"><img src="~/img/fb_icon_325x325.png" style="max-width:30px"/></a>
                    <a href="#"><img src="~/img/twitter.png" style="max-width:30px" /></a>
                    <a href="#"><img src="~/img/google.png" style="max-width:30px" /></a>
                    <div class=col-3></div>
                 </div>
            </div>
        </div>
        
        <div class="m-2 text-center">
            <p><strong>Already have an Account? @Html.ActionLink("Login", "Logon", "Accounts",new {@returnUrl = Url.Action(ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["controller"].ToString())},new {@class = "text-primary"})</strong></p>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
   
