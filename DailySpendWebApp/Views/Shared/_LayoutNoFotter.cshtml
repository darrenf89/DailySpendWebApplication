@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DailySpendBudgetWebApp</title>
    <link rel="stylesheet" href="~/css/BootswatchThemeUnited.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/textboxstyle2.css" rel="stylesheet" />
    <link href="~/css/dropdownmenus.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>
<body class="m-0 p-0 vh-100 bg-white" >
    <div id="backgroundimg" class="m-auto p-0">
        <header class="sticky-top">
            <nav class="navbar navbar-expand bg-primary p-0 border-bottom border-5 border-dark">
                <div>
                    <a asp-action="Index" asp-controller="Home"><i style="font-size: 40px;" class="ps-2 bi bi-x text-warning"></i></a>
                </div>
                <div class="container-fluid mt-2 mb-2 pe-3 justify-content-end">   
                    <h5 class="text-white pt-2 pb-2 m-0">@TempData["PageHeading"]</h5>
                </div>
            </nav>
    </header>
    <div style="max-width: 900px; margin: auto;" class="container ps-2 pe-2">
        <main role="main" class= "">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>
