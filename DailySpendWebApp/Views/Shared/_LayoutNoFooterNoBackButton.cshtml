@using Microsoft.AspNetCore.Http;

@{
    string Action = ViewBag.Action;
    string Controller = ViewBag.Controller;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DailySpendBudgetWebApp</title>
    <link rel="stylesheet" href="~/css/BootswatchThemeUnited.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/textboxstyle2.css" rel="stylesheet" />
    <link href="~/css/dropdownmenus.css" rel="stylesheet" />
    <link href="~/css/savings-type-toggle.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>


<body class="m-0 p-0 vh-100" style="background-color: #ec6538; max-width: 900px;">
    <form method="post" id="myForm">
        <div id="backgroundimg" class="m-auto p-0">
            <header class="sticky-top">
                <nav class="navbar navbar-expand bg-primary p-0 m-0 border-bottom border-3 border-dark">
                    <div class="container-fluid ps-1 justify-content-start mt-2 mb-1">
                        <button asp-action="@Action" asp-controller="@Controller" style="background-color: transparent; border: none; z-index: 99;" class="ps-1">
                            <i class="bi bi-arrow-left text-white h3 m-0 p-0"></i>
                        </button>
                        <h4 class="text-white ps-4 pt-2 pb-2 m-0">@TempData["PageHeading"]</h4>
                    </div>
                </nav>
            </header>
            <div style="max-width: 900px; margin: auto;" class="container ps-0 pe-0">
                <main role="main" class="">
                    @RenderBody()
                </main>
            </div>
    
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
            @await RenderSectionAsync("Scripts", required: false)
        </div>
    </form>
</body>
</html>
