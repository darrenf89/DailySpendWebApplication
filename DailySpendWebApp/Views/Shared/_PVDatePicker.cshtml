@{
    string txtCurrentMonth = "";
}

<div id="DatePickerContainter" class="modal fade" style="display: none;">
    <div id="DatePicker" class="modal-dialog">
        <div class="modal-content">
            <div  id="DatePickerHeader" class="modal-header">
                <div class="d-flex justify-content-between align-items-center bg-primary p-1">
                    <div id="divPreviousMonth" class="ps-4 py-2 m-0"><button type="button" style="background-color: transparent; border: none; text-align: left;" onclick="SelectPreviousMonth()"><i class="bi bi-arrow-left-square text-white"></i></button></div>
                    <div id="divCurrentMonth" class="py-3 m-0"><h3 id="txtCurrentMonth" class="m-0">@txtCurrentMonth</h3></div>
                    <div id="divNextMonth" class="pe-4 py-3 m-0"><button type="button" style="background-color: transparent; border: none; text-align: left;" onclick="SelectNextMonth()"><i class="bi bi-arrow-right-square text-white"></i></button></div>
                </div>
            </div>
            <div class="modal-body">
                <div class="m-0 p-2 d-flex flex-column align-items-center">
                    <div class="d-flex justify-content-between align-items-center m-1" id="DayOfWeekHeader">
                        <h5>MON</h5>
                        <h5>TUE</h5>
                        <h5>WED</h5>
                        <h5>THU</h5>
                        <h5>FRI</h5>
                        <h5>SAT</h5>
                        <h5>SUN</h5>
                    </div>
                    <div class="d-flex justify-content-between align-items-center m-1" id="FirstWeekOfMonth">
                        <button id="btnMon1" style="background-color: transparent; border: none;" onclick="SelectDate('Mon1')"><div id="Mon1" style="width: 13%;"><input type="hidden" id="hdnMon1"/><h5 id="txtMon1" class="text-dark"></h5></div></button>
                        <button id="btnMon1" style="background-color: transparent; border: none;" onclick="SelectDate('Tue1')"><div id="Tue1" style="width: 13%;"><input type="hidden" id="hdnMon1"/><h5 id="txtTue1" class="text-dark"></h5></div></button>
                        <button id="btnMon1" style="background-color: transparent; border: none;" onclick="SelectDate('Wed1')"><div id="Wed1" style="width: 13%;"><input type="hidden" id="hdnMon1"/><h5 id="txtWed1" class="text-dark"></h5></div></button>
                        <button id="btnMon1" style="background-color: transparent; border: none;" onclick="SelectDate('Thu1')"><div id="Thu1" style="width: 13%;"><input type="hidden" id="hdnMon1"/><h5 id="txtThu1" class="text-dark"></h5></div></button>
                        <button id="btnMon1" style="background-color: transparent; border: none;" onclick="SelectDate('Fri1')"><div id="Fri1" style="width: 13%;"><input type="hidden" id="hdnMon1"/><h5 id="txtFri1" class="text-dark"></h5></div></button>
                        <button id="btnMon1" style="background-color: transparent; border: none;" onclick="SelectDate('Sat1')"><div id="Sat1" style="width: 13%;"><input type="hidden" id="hdnMon1"/><h5 id="txtSat1" class="text-dark"></h5></div></button>
                        <button id="btnMon1" style="background-color: transparent; border: none;" onclick="SelectDate('Sun1')"><div id="Sun1" style="width: 13%;"><input type="hidden" id="hdnMon1"/><h5 id="txtSun1" class="text-dark"></h5></div></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>