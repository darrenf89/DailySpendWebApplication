<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DailySpendBudgetWebApp</title>
    <link rel="stylesheet" href="~/css/BootswatchThemeUnited.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/textboxstyle2.css" rel="stylesheet" />
    <link href="~/css/dropdownmenus.css" rel="stylesheet" />
    <link href="~/css/savings-type-toggle.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/site.js"></script>
    <style>
        html {
            margin: 0 auto;
            max-width: 900px;
        }

        .validation-summary-errors ul {
            list-style: none;
            padding: 0;
        }
    </style>
</head>
<body class="p-0 m-0" style="background-color: transparent; background-image: url('../img/logonbackground3.jpg'); background-size: 100% 100%; background-repeat:no-repeat;">
    <br />
    <div class="m-3 mt-0"><a class="text-primary" style="text-decoration: none;" asp-controller="Accounts" asp-action="Home"><p><i class="bi bi-house-heart-fill text-primary"></i> Home </p></a></div>
    <div id="container" class="container d-flex align-items-end" style="min-height:93vh; background-color: transparent;">
        <main role="main" style="background-color: transparent;" class="col-12 pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
