<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DailySpendBudgetWebApp</title>
    <link rel="stylesheet" href="~/css/BootswatchThemeUnited.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/textboxstyle2.css" rel="stylesheet" />
    <link href="~/css/dropdownmenus.css" rel="stylesheet" />
    <link href="~/css/savings-type-toggle.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>
<body class="m-0 p-0">
    
    <div style="max-width: 900px; margin: auto; padding-top: 45px;" class="container-fluid ps-2 pe-2 bg-white">
        <div class="row flex-nowrap">   
            <div class="bg-dark p-0 m-0 w-100 h-100" style="display: none; opacity: 0.5; height: 100vh; max-height: 100vh;" id="divSideBarcover"></div>
            <div class="px-0 bg-dark" id="divSideBar" style="height: 100vh; max-height: 100vh; display: none">                
                <div class="d-flex flex-column align-items-start px-3 pt-3 text-white h-100">
                    <ul class="nav nav-pills flex-column mb-0 align-items-start pt-5" id="menu">
                        <li class="nav-item pt-2">
                            <a href="/Budgets/EditPayInfo" class="nav-link align-middle px-0">
                                <i class="fs-4 bi bi-calendar4 text-white"></i> <span class="ms-1 text-white">Pay Details</span>
                            </a>
                        </li>
                        <li class="nav-item pt-2">
                            <a href="#" class="nav-link align-middle px-0">
                                <i class="fs-4 bi bi-arrow-left-right text-white"></i> <span class="ms-1 text-white">Transactions</span>
                            </a>
                        </li>
                        <li class="nav-item pt-2">
                            <a href="#" class="nav-link align-middle px-0">
                                <i class="fs-4 bi bi-piggy-bank text-white"></i> <span class="ms-1 text-white">Savings</span>
                            </a>
                        </li>
                        <li class="nav-item pt-2">
                            <a href="#" class="nav-link align-middle px-0">
                                <i class="fs-4 bi bi-receipt-cutoff text-white"></i> <span class="ms-1 text-white">Bills</span>
                            </a>
                        </li>
                        <li class="nav-item pt-2">
                            <a href="#" class="nav-link align-middle px-0">
                                <i class="fs-4 bi bi-graph-up-arrow text-white"></i> <span class="ms-1 text-white">Income</span>
                            </a>
                        </li>
                        <li class="nav-item pt-2">
                            <a href="#" class="nav-link align-middle px-0">
                                <i class="fs-4 bi bi-tags-fill text-white"></i> <span class="ms-1 text-white">Categories</span>
                            </a>
                        </li>
                    </ul>
                    <div class="dropdown pb-5 mb-2 mt-auto">
                        <div class="mb-5">
                            <img src="~/img/logoFiles/ForWeb/png/ColorlogobackgroundOrangePurple.png" style="background-color: transparent; width: 100%" />
                        </div>
                        <a href="#" class="container-fluid d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle pe-2"></i>
                            <span class="d-inline mx-1">Account</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                            <li><a class="dropdown-item" href="#">New Budget</a></li>
                            <li><a class="dropdown-item" href="#">Budget Settings</a></li>
                            <li><a class="dropdown-item" href="#">Change Budget</a></li>
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item text-white" asp-controller="Accounts" asp-action="Logout">logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <header class="fixed-top">
        <nav class="navbar navbar-expand bg-primary p-0">
            <div class="container-fluid ps-2 pe-4 pe-1">                
                <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarColor01">
                    <div class="d-flex align-items-center justify-content-start">
                        <a class="p-0 fs-2" onclick="ShowHideSideBar();">
                            <i style="font-size: 30px" class="bi bi bi-list text-white"></i>
                        </a>
                    </div>
                </div>
                <h5 class="text-white m-0">@TempData["PageHeading"]</h5>
            </div>
        </nav>
    </header>
    <div style="max-width: 900px; margin: auto;" class="container-fluid p-1 bg-white">
        <div class="row flex-nowrap"> 
            <main role="main" class="pb-3 pt-1 col-12" id="main">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="fixed-bottom border-top border-dark border-3" style="width: 100%; max-width: 900px; line-height: normal; margin-left: auto; margin-right: auto">
        <div class="d-flex align-items-center justify-content-between bg-primary p-1 pb-2">
            <div class="d-flex flex-column align-items-center col-2">
                <a class="m-1" asp-action="Index" asp-controller="Home"><i class="bi bi-columns-gap text-white" style="font-size: 20px"></i></a>
            </div>
            <div class="d-flex flex-column align-items-center col-2">
                <a class="m-1" asp-action="AddBill" asp-controller="Bills"><i class="bi bi-receipt-cutoff text-white" style="font-size: 20px"></i></a>
            </div>
            <div class="d-flex flex-column align-items-center col-2">
                <a class="m-1" asp-action="AddTransaction" asp-controller="Transaction"><i class="bi bi-plus-circle text-white" style="font-size: 20px"></i></a>
            </div>
            <div class="d-flex flex-column align-items-center col-2">
                <a class="m-1" asp-action="addIncome" asp-controller="Incomes"><i class="bi bi-graph-up-arrow text-white" style="font-size: 20px"></i></a>
            </div>
            <div class="d-flex flex-column align-items-center col-2">
                <a class="m-1" asp-action="AddSaving" asp-controller="Savings"><i class="bi bi-piggy-bank text-white" style="font-size: 20px"></i></a>
            </div>
        </div>
    </footer>

    <style>
        #divSideBar, #content {
            height: 100%;
            overflow: auto;
        }

        #divSideBar {
            position: absolute;
            left: 0;
            top: 0;
            z-index: 99;
            width: 40%;
            box-shadow: 2px 0 4px rgba(0,0,0,0.5);
            /*transition: width 4.35s;*/
        }

        #divSideBarcover{
            position: absolute;
            left: 0;
            top: 0;
            z-index: 99;
        }
    </style>

    <script>

        function ShowHideSideBar()
        {
            if ($('#divSideBar').is(":visible"))
            {
                //document.getElementById('divSideBar').style.display = 'none';
                $('#divSideBarcover').toggle()
                $('#divSideBar').toggle("slow", function () {
                    // Animation complete.
                })
            }
            else
            {
                $('#divSideBarcover').toggle()
                //document.getElementById('divSideBar').style.display = 'flex';
                $('#divSideBar').toggle("slow", function () {
                    
                    // Animation complete.
                })
            }
        }

    </script>
 
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
