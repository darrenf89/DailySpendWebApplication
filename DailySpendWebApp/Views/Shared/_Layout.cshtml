<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DailySpendBudgetWebApp</title>
    <link rel="stylesheet" href="~/css/BootswatchThemeUnited.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/js/site.js"></script>
</head>
<body class="m-0 p-0">
    <header class="sticky-top">
        <nav class="navbar navbar-expand bg-primary p-0">
            <div class="container-fluid ps-4 pe-1">
                <h5 class="text-white m-0">@TempData["PageHeading"]</h5>
                <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarColor01">
                    <ul class="navbar-nav">
                        <li style="line-height: normal;" class="nav-item dropdown">
                            <a class="p-0" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i style="font-size: 40px" class="bi bi-list text-white"></i></a>
                            <div class="dropdown-menu border-primary shadow-lg" style="background-color: White;  top: 25px; left: -300%;">
                                <a class="dropdown-item text-primary" asp-action="CreateABudget" asp-controller="Budgets">Create a Budget</a>
                                <a class="dropdown-item text-primary" href="#">Another action</a>
                                <a class="dropdown-item text-primary" href="#">Something</a>
                                <div class="dropdown-divider border-primary"></div>
                                <a class="dropdown-item text-primary" href="#">Separated link</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div style="max-width: 900px; margin: auto; min-height: 100vh;" class="container ps-2 pe-2 bg-white">
        <p style="font-size: 11px" class="text-end text-muted mb-1"><span>Not @TempData["NickName"] please </span><a class="text-primary" asp-controller="Accounts" asp-action="Logout">logout</a></p>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="sticky-bottom border-top border-dark border-3" style="width: 100%; max-width: 900px; line-height: normal;">
        <div class="d-flex align-items-center justify-content-between bg-primary p-1 pb-2">
            <div class="d-flex flex-column align-items-center col-2">
                <a class="m-1" asp-action="Index" asp-controller="Home"><i class="bi bi-columns-gap text-white" style="font-size: 20px"></i></a>
            </div>
            <div class="d-flex flex-column align-items-center col-2">
                <a class="m-1" asp-action="AddBill" asp-controller="Bills"><i class="bi bi-receipt-cutoff text-white" style="font-size: 20px"></i></a>
            </div>
            <div class="d-flex flex-column align-items-center col-2">
                <a class="m-1" asp-action="AddTransaction" asp-controller="Transaction"><i class="bi bi-plus-circle text-white" style="font-size: 20px"></i></a>
            </div>
            <div class="d-flex flex-column align-items-center col-2">
                <a class="m-1" asp-action="addIncome" asp-controller="Incomes"><i class="bi bi-graph-up-arrow text-white" style="font-size: 20px"></i></a>
            </div>
            <div class="d-flex flex-column align-items-center col-2">
                <a class="m-1" asp-action="AddSaving" asp-controller="Savings"><i class="bi bi-piggy-bank text-white" style="font-size: 20px"></i></a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
