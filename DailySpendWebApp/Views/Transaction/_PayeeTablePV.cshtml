@model List<string?>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    if (Model[0] == "No Payees")
    {
        <div class="d-flex mt-3 justify-content-center text-center text-white"><h6>You have not set up any Payee's go ahead and do that!</h6></div>
    }
    else
    {
        string StartsWith = Model[0].Substring(0, 1).ToUpper();
        <div>@StartsWith</div>
        foreach (string item in Model)
        {
            if (StartsWith != item.Substring(0, 1).ToUpper())
            {
                StartsWith = item.Substring(0, 1).ToUpper();
                <div><h3 class="p-1 ps-3">@StartsWith</h3></div>
            }
            <div>
                <button type="submit" asp-controller="Transaction" asp-action="SelectSpecificPayee" asp-route-PayeeName="@item" style="background-color: transparent; border: none;">
                    <div class="text-left text-muted">
                        <p class="text-dark mt-3 mb-3 border-0 ps-4"><strong>@item</strong></p>
                    </div>
                </button>
            </div>
        }
    }

}

